{
  "name": "paid-care",
  "version": "1.0.0",
  "description": "PAID is library for care billing with payers in Germany according to § 105 SGB XI and § 302 SGB V. The project name is an acronym and stands for \"Pflegeabrechnung in Deutschland\".",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc -p .",
    "test": "jest --coverage"
  },
  "files": [
    "lib",
    "dist",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coop-care/paid.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "Pflege",
    "Abrechnung",
    "SGB XI",
    "SGB V",
    "Pflegeversicherung",
    "Krankenversicherung",
    "GKV",
    "Kostenträger",
    "Datenübermittlung"
  ],
  "author": "CoopCare Project <paid@coopcare.de>",
  "contributors": [
    "Michael Kamphausen",
    "Tobias Zwick",
    "Alexander Schmidtpeter"
  ],
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/coop-care/paid/issues"
  },
  "homepage": "https://github.com/coop-care/paid#readme",
  "dependencies": {
    "@peculiar/asn1-schema": "^2.0.32",
    "@peculiar/asn1-x509": "^2.0.32",
    "@xmldom/xmldom": "^0.8.1",
    "any-ascii": "^0.3.0",
    "asn1js": "^3.0.5",
    "cross-fetch": "^4.0.0",
    "pkijs": "^3.0.16"
  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@types/node": "^20.11.26",
    "jest": "^29.3.1",
    "mockdate": "^3.0.5",
    "ts-jest": "^29.0.3",
    "typescript": "^5.4.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+node_modules/pkijs/.+\\.js$": "ts-jest",
      "^.+node_modules/any-ascii/.+\\.js$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!pkijs|any-ascii)",
      "\\.pnp\\.[^\\/]+$"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "tests/.+\\.spec\\.ts$",
    "collectCoverageFrom": [
      "src/**"
    ]
  }
}
